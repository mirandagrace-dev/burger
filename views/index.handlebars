

<div class="row">
  <div class="col-sm-6">
    <h2>Burgers you need to devour!</h2>
     <div class="row">
      <div class="col-sm-12 mx-auto devour">
        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block appetite=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <h2>Burgers devoured!</h2>
    <div class="row">
      <div class="col-sm-12 mx-auto devour">
        <ul>
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block appetite=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
</div>




<form class="create-form form mx-auto">
    <h2>Add a burger</h2>
    <div class="form-wrapper">
      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

       <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Not devoured!
      </div>
        <button class="btn submit-btn" type="submit">Add Burger</button>
    </div>
    </form>