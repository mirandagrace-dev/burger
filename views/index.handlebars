<img class="burger-img mx-auto d-block" src="/assets/images/burger-img.png" alt="">

<div class="row">
  <div class="col-sm-6 mx-auto devour">
    <h2>Burgers you need to devour!</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block appetite=true}}
           {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-sm-6 mx-auto devour">
    <h2>Burgers you've devoured!</h2>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block appetite=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> devoured!<br>
    <input type="radio" name="devoured" value="0"> not devoured... YET!
  </div>

  <button type="submit">Add a Burger!</button>
</form>